# YouTube Data API v3 Key
YOUTUBE_API_KEY=your_youtube_api_key_here

# OAuth 2.0 Credentials (Required to access private playlists)
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
OAUTH_REDIRECT_URI=http://localhost:3000/oauth2callback
OAUTH_PORT=3000  # Port for OAuth callback server

# Default subtitle language (optional)
YOUTUBE_TRANSCRIPT_LANG=en

# OAuth Tokens Storage (optional)
TOKENS_PATH=./tokens.json